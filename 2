import java.util.Scanner;

public class oneEx {
	public static void main(String[] args) {
		
		Scanner scanner=new Scanner(System.in);
		
		System.out.print("N,K 값 입력 : ");
		int N=scanner.nextInt();
		int K=scanner.nextInt();
		int count=0;
		
		
		while(true)
		{
			if(N%K==0)
			{
				N/=K;
				count++;
			}
			else if(N%K!=0)
			{
				N-=1;
				count++;
				
			}
			
			if(N==1)
			{
				System.out.println(count);
				break;
			}
		}
	}

}
